{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "beg_seg": "#07e45b",
    "blue": "#3099db",
    "chatruse": "#8cc914",
    "dark": "#3e3838",
    "dark_purple": "#d87fec",
    "dark_red": "#f30d09",
    "error_foreground": "#ff0095",
    "light": "#ffffff",
    "neon_green": "#21ff75",
    "orange": "#f36943",
    "pink": "#f943ad",
    "purple": "#cd5af0",
    "red": "#ef5350",
    "sky": "#3ee1e1",
    "sky_blue": "#40c4ff",
    "yellow": "#e8ee2a"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "diamond",
          "background": "p:beg_seg",
          "foreground": "p:light",
          "template": " {{ .HostName }} ",
          "properties": {
            "cache_duration": "none"
          }
        },
        {
          "properties": {
            "cache_duration": "none",
            "style": "full"
          },
          "template": " {{ .Path }} ",
          "foreground": "p:light",
          "background": "#0f87d1",
          "type": "path",
          "style": "diamond"
        },
        {
          "properties": {
            "branch_icon": "\ue725 ",
            "cache_duration": "none",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<p:orange> \uf046 {{ .Staging.String }}</>{{ end }} ",
          "foreground": "p:light",
          "powerline_symbol": "\ue0b0",
          "background": "p:yellow",
          "type": "git",
          "style": "diamond",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:dark_purple{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:chatruse{{ end }}",
            "{{ if gt .Ahead 0 }}p:dark_purple{{ end }}",
            "{{ if gt .Behind 0 }}p:dark_purple{{ end }}"
          ]
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "\u2570\u2500",
          "foreground": "#21c7c7",
          "type": "text",
          "style": "plain"
        },
        {
          "properties": {
            "always_enabled": true,
            "cache_duration": "none"
          },
          "template": "\ue285\ueab6 ",
          "foreground": "#e0f8ff",
          "type": "status",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#ef5350{{ end }}"
          ]
        }
      ],
      "newline": true
    }
  ],
  "version": 3
}